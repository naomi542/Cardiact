            text: "Medical Terminology"
            font_size: 18
            bold: True
            text_size: self.size
            halign:'left'
            pos_hint:{"x":0.05, "y":0.60}

        ScrollView:
            size_hint: 0.9, 0.15
            pos_hint: {"x": 0.05, "y": 0.45}

            StackLayout:
                size_hint:1,2.5
                orientation: 'lr-tb'
                spacing:2

                TextInput:
                    size_hint: 0.9,0.1
                Image:
                    source: "ImageResources/search_icon.png"
                    size_hint: 0.08, 0.1

                GridLayout:
                    size_hint:1,1
                    rows:5
                    Label:
                        text: "Aortic Regurgitation (AR):"
                        font_size: 12
                        bold: True
                        text_size: self.size
                        halign:'left'
                    Label:
                        text: "leaking of the aortic valve of the heart that causes blood to flow in the reverse direction during ventricular diastole, from the aorta into the left ventricle"
                        font_size: 12
                        text_size: self.size
                        halign:'left'

                    Label:
                        text: "Mitral Stenosis:"
                        font_size: 12
                        bold: True
                        text_size: self.size
                        halign:'left'
                    Label:
                        text: "narrowing of the mitral valve opening that blocks (obstructs) blood flow from the left atrium to the left ventricle"
                        font_size: 12
                        text_size: self.size
                        halign:'left'
                    Label:
                        text: ""
                        font_size: 12

        Label:
            text: "Video Tutorial"
            font_size: 18
            bold: True
            text_size: self.size
            halign:'left'
            pos_hint:{"x":0.05, "y":0.40}

        Button:
            text: "App Walkthrough"
            pos_hint:{"x":0.05, "top": 0.375}
