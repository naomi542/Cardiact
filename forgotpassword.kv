#:import FadeTransition kivy.uix.screenmanager.FadeTransition

<ForgotPasswordScreen>:
    name: "forgotpassword"

    email: email
    reset_btn: reset_btn
    cancel_btn: cancel_btn
    error_message: error_message
    confirmation_message: confirmation_message

    FloatLayout:
        Label:
            text: "Forgot your password?"
            font_size: 24
            size_hint: 0.01, 0.01
            pos_hint:{"x": 0.5, "top": 0.9}

        TextInput:
            id: email
            hint_text: "Enter your email"
            multiline: False
            valign: "center"
            pos_hint:{"x": 0.2, "top": 0.45}
            size_hint: 0.6, 0.06
            font_size: 16

        Button:
            id: reset_btn
            text: "Reset my password"
            font_size: 16
            pos_hint:{"x": 0.2, "top": 0.35}
            size_hint: 0.6, 0.07
            on_press:
                root.submit()

        Button:
            id: cancel_btn
            text: "Cancel"
            font_size: 16
            pos_hint:{"x": 0.2, "top": 0.27}
            size_hint: 0.6, 0.07
            on_press:
                root.back_to_login()
                root.manager.transition.direction = "right"

        Label:
            id: error_message
            text: ""
            font_size: 14
            size_hint: 0.06, 0.07
            pos_hint:{"x": 0.48, "top": 0.2}

        Label:
            id: confirmation_message
            text: ""
            font_size: 14
            size_hint: 0.06, 0.07
            pos_hint:{"x": 0.48, "top": 0.27}


