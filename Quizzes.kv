#:import FadeTransition kivy.uix.screenmanager.FadeTransition

<QuizzesScreen>:
    name: "quizzes"

    FloatLayout:
        BackButtonIcon:
        BackButton:
            on_release:
                app.root.current = "home"
                root.manager.transition.direction = "right"

        Label:
            text: "Quizzes"
            bold: True
            size_hint: 1, 0.05
            font_size: 24
            pos_hint:{"x": 0, "top": 0.95}

        Label:
            text: "Your Points:     "
            size_hint: 0.43, 0.05
            pos_hint:{"x": 0, "top": 0.87}

        Label:
            text: "                      360"
            color: 1.9, 0, 0, 1
            size_hint: 0.45, 0.05
            pos_hint:{"x": 0, "top": 0.87}

        Label:
            text: "Quizzes in your Classroom"
            font_size: 18
            color: 0.1, 0.8, 1, 1
            size_hint: 0.73, 0.05
            pos_hint:{"x": 0, "top": 0.8}

        GridLayout:
            size_hint: 0.85, 0.4
            pos_hint:{"x": 0.075, "y":0.345}

            cols:2
            rows:2
            spacing: 15

            Button:
                text: "Auscultation\n  Locations"
            Button:
                text: "Sound Diagnosis"
            Button:
                text: "Sound Diagnosis"
            Button:
                text: "Sound Diagnosis"
        Label:
            text: "Cardiact's Quizzes"
            font_size: 18
            color: 0.1, 0.8, 1, 1
            size_hint: 0.565, 0.05
            pos_hint:{"x": 0, "top": 0.305}

        GridLayout:
            size_hint: 0.85, 0.2
            pos_hint:{"x": 0.075, "y":0.05}

            rows: 3
            spacing: 5

            Button:
                text: "Beginner"
                on_release:
                    app.root.current = "beginnerquiz"
                    root.manager.transition.direction = "left"
            Button:
                text: "Intermediate"
            Button:
                text: "Advanced"


